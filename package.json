{
  "name": "freetp-launcher",
  "version": "1.0.0",
  "description": "Freetp Game Launcher",
  "author": "Bagmak123",
  "main": "main.js",

  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --x64"
  },

  "build": {
    "appId": "com.freetp.launcher",
    "productName": "Freetp Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },

  "dependencies": {},

  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3"
  }
}
